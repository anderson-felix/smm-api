{
  "name": "smm-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "yarn up && yarn logs",
    "start": "node dist/shared/infra/http/server.js",
    "image:build": "docker build --tag backend .",
    "image:rm": "docker image rm backend",
    "up": "docker compose up -d",
    "down": "docker compose down",
    "restart": "docker compose restart backend && yarn logs",
    "logs": "docker logs backend -f",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files",
    "typeorm": "docker exec -it backend yarn ts-node-dev -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "eslint:fix": "eslint --fix --ext .js,.ts src"
  },
  "dependencies": {
    "aws-sdk": "2.1016.0",
    "axios": "^0.27.2",
    "bcryptjs": "^2.4.3",
    "celebrate": "^13.0.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^8.5.1",
    "mime-types": "2.1.33",
    "nodemailer": "6.7.0",
    "pg": "^8.5.1",
    "pino": "^7.6.1",
    "pino-pretty": "^7.3.0",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.4.0",
    "typeorm": "^0.2.29"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/node": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-decorators": "^7.12.12",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.9",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mime-types": "2.1.1",
    "@types/nodemailer": "6.4.4",
    "@types/node": "17.0.13",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.1",
    "eslint": "7.31.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "^2.3.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
